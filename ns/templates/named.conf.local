
{% for zone in ns_master_zones %}
zone "{{ zone }}" {
  zone-statistics no;
  type master;
  file "/etc/bind/master/{{ zone }}";
  forwarders {};
};
{% endfor %}

{% for zone in ns_forward_zones | default([]) %}
zone "{{ zone }}" {
  type forward;
  forward only;
  forwarders {
    {% for upstream in ns_upstream %}
    {{ upstream }};
    {% endfor %}
  };
};
{% endfor %}
statistics-channels {
        inet 127.0.0.1 port 8653 allow { 127.0.0.1; };
};

